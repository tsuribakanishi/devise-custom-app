<h1>予約履歴</h1>


<table>
  <thead>
    <tr>
      <th>図書名</th>
      <th>著者名</th>
      <th>予約日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= Book.find(ticket.book_id).book_name %></td>
        <td><%= Book.find(ticket.book_id).author %></td>
        <td><%= ticket.created_at.strftime('%Y年%m月%d日') %></td>
        <td><%#= ticket.kbn1 %></td>
        <td><%#= link_to 'Show', ticket %></td>
        <td><%#= link_to 'Edit', edit_book_path(ticket) %></td>
        <td><%#= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
